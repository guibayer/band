*{
	margin:0;
	padding:0;
	background:#F7F7F7;
}
body{
	font: 16px sans-serif;
	background:#F7F7F7;
}
fieldset{
	border:none;
	margin:20px;
}
label{
	text-transform:capitalize;
}
fieldset:first-letter{
	font:bold 30px sans-serif;
	color:red;
}
#post{
margin-left:80px;
margin-top:50px;
width:600px;
height:500px;
border:2px solid #939393;
box-shadow: 10px 10px 12px #828282;
border-radius:2em;
}
#login{
margin-left:200px;
padding:10px 10px 10px;
margin-top:50px;
width:300px;
border:2px solid #939393;
box-shadow: 10px 10px 12px #828282;
border-radius:2em;
}
